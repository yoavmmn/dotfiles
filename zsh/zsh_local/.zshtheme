function battery_info () {
  local awk2="$(pmset -g batt | tail -n 1 | awk '{print $3}')"
  local percent="${$(echo $awk2 | grep '%')%?}"
  echo "%{$fg_bold[white]%}[â‡€ ${percent}%]"
}

function is_ssh () {
  if [[ -n $SSH_CONNECTION ]]; then
    echo "[SSH]"
  fi
}

function node_version () {
  echo "%{$fg_bold[green]%}[â¬¢ $(node -v)]"
}

function machine_name () {
  echo "%{$fg_bold[yellow]%}[$(whoami)]"
}

function left_prompt () {
  echo "%{$fg_bold[green]%}%T %{$fg_bold[yellow]%}%n %{$fg_bold[red]%}@ %{$fg_bold[cyan]%}%~"
}

function rand_pointer() {
  pointers="ðŸ‘‰âœ¨ðŸŒ€"
  echo "${pointers[$(( $RANDOM % ${#pointers[@]} + 1 ))]}  "
}

function second_prompt () {
  echo "%{$fg_bold[blue]%}$(rand_pointer) %{$fg[red]%}"
}

function put_spaces () {
  local zero='%([BSUbfksu]|([FBK]|){*})'
  local upperleft="$(left_prompt)"
  upperleft=${#${(S%%)upperleft//$~zero/}}
  local upperright="$(info_git)$(battery_info)$(node_version)"
  upperright=${#${(S%%)upperright//$~zero/}}
  local termwidth
  (( termwidth = $(tput cols) - ${upperleft} - ${upperright} ))
  local spacing=""
  for i in {1..$termwidth}; do
    spacing="${spacing} "
  done
  echo $spacing
}

function build_prompt () {
PROMPT='$(left_prompt)$(put_spaces)$(info_git)$(battery_info)$(node_version)\
 $(second_prompt)'
}

add-zsh-hook precmd build_prompt
